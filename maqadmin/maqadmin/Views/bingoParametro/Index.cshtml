@model IEnumerable<maqadmin.Models.bingoParametro>
@{
    ViewBag.Title = "Index";
}
@*<h2>Index</h2>*@
<p>
    @Html.ActionLink("Nuevo Local", "Create")
</p>
<table>
    <tr>
        <th>
            Local
        </th>
        <th>
            Estado Juego
        </th>       
        <th>
            Premio
        </th>        
        <th>
            Bingo
        </th>
        <th>
            Visualizar
        </th>
        <th>
            Conectar a pantallas
        </th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idLocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estadoJuego.nombre)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.premioDefecto)
            </td>           
            <td>
                @Html.ActionLink("Nuevo Juego", "Limpiar", new { id = item.idLocal })
                @if (item.idEstadoJuego != 3)
                {

                    if (item.idEstadoJuego == 4)
                    {
                         @Html.ActionLink("Continuar", "ActivarJuego", new { id = item.idLocal }) 
                    }
                    else
                    {
                        @Html.ActionLink("Iniciar", "ActivarJuego", new { id = item.idLocal }) 
                    }


                }
                
                
                @if (item.idEstadoJuego != 4)
                {
                    @Html.ActionLink("Pausar", "Pausar", new { id = item.idLocal })
                }
                
                 @if (item.idEstadoJuego != 1)
                {
                    @Html.ActionLink("Finalizar", "FinalizarJuego", new { id = item.idLocal })
                }
                </td>
                <td>
                

                @if (item.idEstadoJuego != 2)
                {
                      @Html.ActionLink("Video", "Video", new { id = item.idLocal })
                }
                else
                {
                    @Html.ActionLink("Bingo", "Pausar", new { id = item.idLocal })
                    
                }
                




                </td>
                <td>
              
                @Html.ActionLink("Detener Refrescar", "DetenerTimer", new { id = item.idLocal })
                @Html.ActionLink("Activar Refrescar", "ActivarTimer", new { id = item.idLocal })






                @* @Html.ActionLink("Editar", "Edit", new { id=item.idParametro }) |
            @Html.ActionLink("Ver", "Details", new { id=item.idParametro }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idParametro })*@
            </td>
        </tr>
    }
</table>
